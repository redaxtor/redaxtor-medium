{
  "name": "redaxtor-medium",
  "version": "0.1.1",
  "description": "MediumEditor component for Redaxtor library",
  "main": "lib/index.js",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "eslint src",
    "check:src": "npm run lint",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:commonjs && npm run build:less",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib && lessc src/redaxtor-medium.less lib/redaxtor-medium.css",
    "build:umd:example": "cross-env NODE_ENV=development & webpack example/src/index.js example/redaxtor-custom.js",
    "build:less": "lessc src/redaxtor-medium.less lib/redaxtor-medium.css",
    "prepublish": "npm run clean && npm run check:src && npm run build"
  },
  "author": "SpiralScout",
  "license": "MIT",
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.5",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-dev-warning": "^0.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "cross-env": "^1.0.7",
    "eslint": "^2.4.0",
    "less": "^2.6.1",
    "rimraf": "^2.5.2",
    "webpack": "^1.12.14"
  },
  "dependencies": {
    "medium-editor": "^5.14.4",
    "react": "^15.0.0-rc || ^15.0.0",
    "react-dom": "^15.0.0-rc || ^15.0.0"
  }
}
